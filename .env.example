APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
# URL y puerto donde corre Laravel. IMPORTANTE: usa 127.0.0.1 O localhost, no mezcles.
# Si abres http://127.0.0.1:8004 → APP_URL=http://127.0.0.1:8004 (evita 419 en login).
# Si abres http://localhost:8004 → APP_URL=http://localhost:8004
# Producción: https://tu-app.ondigitalocean.app
APP_URL=http://127.0.0.1:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# --- Base de datos ---
# LOCAL: usa SQLite para que la app no dependa de la DB remota (evita timeouts).
# PRODUCCIÓN (DigitalOcean): usa MySQL con las variables que te da el cluster.
DB_CONNECTION=sqlite
# DB_DATABASE es la ruta al archivo SQLite (por defecto database/database.sqlite).
# DB_DATABASE=database/database.sqlite

# Solo en producción / cuando quieras conectar a MySQL (p. ej. DigitalOcean):
# DB_CONNECTION=mysql
# DB_HOST=tu-cluster.db.ondigitalocean.com
# DB_PORT=25060
# DB_DATABASE=reyes-primero
# DB_USERNAME=doadmin
# DB_PASSWORD=tu_password
# DigitalOcean Managed MySQL exige SSL. Descarga el CA y pon la ruta aquí:
#   - Panel: Databases → tu cluster → Connection parameters → "Download CA certificate"
#   - O: doctl databases get-ca <cluster-id> > storage/app/ca-certificate.crt
# Ruta relativa al proyecto o absoluta. Ejemplo:
# MYSQL_ATTR_SSL_CA=storage/app/ca-certificate.crt

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
# Default disk. In production with DO Spaces use: FILESYSTEM_DISK=spaces and FILESYSTEM_PRIVATE_DISK=spaces
FILESYSTEM_DISK=local
FILESYSTEM_PRIVATE_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# --- Correo (SMTP) ---
# Para enviar correos reales usa MAIL_MAILER=smtp. Con "log" solo se escribe en storage/logs.
MAIL_MAILER=log
# SMTP: descomenta y rellena cuando uses un servidor real (Gmail, Mailtrap, SendGrid, etc.)
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.mailtrap.io
# MAIL_PORT=587
# MAIL_USERNAME=tu_usuario
# MAIL_PASSWORD=tu_password
# Cifrado: tls (puerto 587), ssl (puerto 465) o null (puerto 25 sin cifrado)
# MAIL_ENCRYPTION=tls
# Remitente visible en todos los correos
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"
# Opcional: URL completa en lugar de host/port/user/pass. Si está definida puede ignorar las variables anteriores.
# Formato: smtp://USER:PASSWORD@HOST:PORT?encryption=tls
# MAIL_URL=

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# DigitalOcean Spaces (production). Set FILESYSTEM_DISK=spaces and FILESYSTEM_PRIVATE_DISK=spaces when APP_ENV=production
DO_SPACES_KEY=
DO_SPACES_SECRET=
DO_SPACES_BUCKET=storage-reyes-primero-app
DO_SPACES_ENDPOINT=https://sfo2.digitaloceanspaces.com
DO_SPACES_REGION=sfo2
# Optional: CDN URL if you use a custom domain for the Space
# DO_SPACES_URL=https://your-space.sfo2.digitaloceanspaces.com

VITE_APP_NAME="${APP_NAME}"
